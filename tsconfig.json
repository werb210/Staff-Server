{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": "server",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "noEmitOnError": true
  },
  "include": ["server/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "server/drizzle.config.ts",
    "server/simulation/**",
    "server/vitest.config.ts"
  ]
}
