{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "server/src",
    "outDir": "dist/server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": false,
    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "server/src/**/*.ts",
    "types/**/*.ts",
    "prisma/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**",
    "simulation/**",
    "node_modules/**",
    "dist/**"
  ]
}
