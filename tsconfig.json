{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "rootDir": "server/src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"]
  },
  "include": ["server/src/**/*.ts"],
  "exclude": [
    "server/src/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "dist",
    "node_modules",
    "tests"
  ]
}
