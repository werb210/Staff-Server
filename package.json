{
  "name": "staff-server",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "npm run build && node dist/server/index.js",
    "build": "npm run test && tsc",
    "start": "node dist/server/index.js",
    "db:migrate": "tsx -e \"import('./src/migrations').then(m => m.runMigrations()).catch(err => { console.error(err); process.exit(1); })\"",
    "db:seed": "tsx src/db/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:runtime": "npm run build && node scripts/runtime-verify.js",
    "test:codex:server": "node scripts/codex-server-test.js",
    "user:set-role": "tsx scripts/set-user-role.ts"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.29.1",
    "@types/multer": "^2.0.0",
    "applicationinsights": "^3.12.1",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "googleapis": "^133.0.0",
    "jsonwebtoken": "^9.0.3",
    "libphonenumber-js": "^1.12.34",
    "multer": "^2.0.2",
    "pg": "^8.11.5",
    "twilio": "^5.5.0",
    "web-push": "^3.6.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "@types/web-push": "^3.6.4",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "^7.0.3",
    "jest": "^30.0.5",
    "pg-mem": "^3.0.5",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "ts-jest": "^29.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17"
  }
}
