{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./server/src",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },

  "include": [
    "server/src/**/*"
  ],

  "exclude": [
    "server/src/__tests__",
    "dist"
  ]
}
