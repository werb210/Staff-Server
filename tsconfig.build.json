{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "server/src",
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022"
  },
  "include": [
    "server/src/**/*.ts",
    "server/types/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}
