{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "noEmitOnError": true,
    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "server/src/**/*.ts",
    "types/**/*.ts",
    "prisma/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**",
    "simulation/**",
    "node_modules/**",
    "dist/**"
  ]
}
