{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmitOnError": false,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node", "express"]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}
