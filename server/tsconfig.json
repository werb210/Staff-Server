{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "server/src/*"
      ]
    },
    "outDir": "dist",
    "rootDir": "server/src",
    "noImplicitAny": false
  },
  "include": [
    "server/src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
