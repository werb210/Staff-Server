{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"],
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "dist",
    "node_modules"
  ]
}
