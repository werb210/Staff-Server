{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "skipLibCheck": true,

    "outDir": "../dist",
    "rootDir": "./src",

    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./src/*"]
    },

    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },

  "include": [
    "src/**/*",
    "types/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
