{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "../src",

    "module": "commonjs",
    "moduleResolution": "node",

    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "declaration": false,
    "sourceMap": false
  },
  "include": ["../src/**/*.ts"],
  "exclude": ["../node_modules", "../tests"]
}
