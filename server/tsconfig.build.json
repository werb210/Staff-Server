{
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "../src",

    "module": "commonjs",
    "moduleResolution": "node",

    "target": "ES2020",
    "lib": ["ES2020"],

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "strict": false,
    "sourceMap": false
  },
  "include": ["../src/**/*.ts"],
  "exclude": ["../node_modules", "../tests"]
}
