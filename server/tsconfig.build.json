{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": false,
    "sourceMap": false,
    "noEmitOnError": true
  },
  "include": [
    "./src/**/*.ts",
    "./drizzle.config.ts",
    "./vitest.config.ts",
    "./simulation/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
